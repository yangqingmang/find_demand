  "discovery_seeds": {
    "default_profile": "ai_tools",
    "min_terms": 3,
    "profiles": {
      "ai_tools": {
        "label": "AI tools & automation",
        "terms": [
          "AI tool",
          "AI generator",
          "AI writer",
          "AI assistant",
          "machine learning platform",
          "chatbot builder",
          "workflow automation"
        ]
      },
      "saas_growth": {
        "label": "SaaS growth & marketing",
        "terms": [
          "saas marketing",
          "product led growth",
          "onboarding automation",
          "customer success playbook",
          "b2b lead generation",
          "self serve trial"
        ]
      },
      "creator_economy": {
        "label": "Creator & content economy",
        "terms": [
          "creator monetization",
          "newsletter automation",
          "online course tools",
          "content repurposing",
          "audience analytics"
        ]
      }
    },
    "enrichment": {
      "manual_seed_file": "config/manual_seed_keywords.json",
      "positive_seed_file": "config/positive_seed_keywords.json",
      "brand_ratio_limit": 0.3,
      "manual_seed_backfill": 5,
      "priority_seed_limit": 5,
      "min_manual_seed_on_shortage": 3
    }
  },
  
  "discovery_runtime": {
    "cache_enabled": true,
    "cache_ttl_seconds": 3600,
    "cache_dir": "output/cache/discovery",
    "max_concurrency": 5,
    "default_rate_interval": 0.35,
    "request_timeout": 12,
    "max_retries": 3,
    "retry_backoff": [1, 3],
    "rate_limits": {
      "www.reddit.com": 1.1,
      "reddit.com": 1.1,
      "hn.algolia.com": 0.6,
      "news.ycombinator.com": 0.6,
      "suggestqueries.google.com": 0.25,
      "api.producthunt.com": 1.0,
      "www.producthunt.com": 1.0
    },
    "embeddings": {
      "enabled": true,
      "min_keywords": 5,
      "model_name": "sentence-transformers/all-MiniLM-L6-v2"
    }
  },
  
  "intent_analysis": {
    "confidence_threshold": 0.6,
    "enable_serp_analysis": true,
    "sub_intent_detection": true
  },
  
  "website_generation": {
    "use_tailwind": true,
    "include_analytics": true,
    "responsive_design": true,
    "seo_optimization": true,
    "generate_sitemap": true
  },
  
  "deployment": {
    "platform": "cloudflare",
    "auto_ssl": true,
    "custom_domain_support": true,
    "cdn_enabled": true,
    "environment": "production"
  },
  
  "ai_enhancement": {
    "ai_bonus_weight": 0.2,
    "newness_bonus_weight": 0.1,
    "commercial_value_weight": 0.15,
    "root_match_weight": 0.05
  },
  
  "output_settings": {
    "base_output_dir": "output",
    "reports_dir": "output/reports",
    "save_intermediate_results": true,
    "generate_thumbnails": true,
    "create_backup": true,
    "compress_assets": true
  },

  "workflow_cache": {
    "enabled": true,
    "ttl_hours": 12,
    "directory": "output/workflow_cache",
    "verbose": false
  },

  "reddit_api": {
    "enabled": false,
    "use_rss": true,
    "credentials_encrypted": {
      "_ENCRYPTED_KEY": "",
      "client_id": "",
      "client_secret": "",
      "username": "",
      "password": "",
      "user_agent": ""
    },
    "token_cache_path": "output/cache/reddit_token.json",
    "token_refresh_margin": 300
  },

  "serp_api_enabled": true,
  "serp_api_monthly_limit": 250,
  "serp_api_failure_limit": 5,
  "serp_api_failure_cooldown_hours": 12,
  "serp_api_skip_on_failure": false,
  
  "notification": {
    "email_notifications": false,
    "webhook_url": "",
    "slack_integration": false
  }
