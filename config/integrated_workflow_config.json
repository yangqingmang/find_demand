{
  "workflow_settings": {
    "min_opportunity_score": 60,
    "max_projects_per_batch": 5,
    "auto_deploy": true,
    "generate_reports": true
  },
  
  "demand_mining": {
    "min_search_volume": 100,
    "max_competition": 0.8,
    "min_confidence": 0.7,
    "analysis_depth": "standard",
    "data_sources": ["google_trends", "keyword_planner"]
  },

  "new_word_detection": {
    "low_volume_threshold_12m": 250,
    "low_volume_threshold_90d": 120,
    "low_volume_threshold_30d": 80,
    "high_growth_threshold_7d": 80,
    "min_recent_volume": 10,
    "score_threshold": 55,
    "confidence_thresholds": {
      "high": 75,
      "medium": 55
    }
  },

  "discovery_filters": {
    "brand_filter_enabled": true,
    "strict_brand_modifiers": false,
    "min_non_brand_tokens": 1,
    "generic_filter_enabled": true,
    "max_brand_variations": 8,
    "lsh_similarity_threshold": 0.9,
    "cluster_distance_threshold": 0.2
  },

  "keyword_filters": {
    "brand_phrases_mode": "extend",
    "brand_phrases": [
      "runwayml",
      "perplexity ai",
      "janitor ai"
    ],
    "brand_modifier_mode": "extend",
    "brand_modifiers": [
      "lifetime deal",
      "affiliate",
      "pricing plan"
    ],
    "generic_head_mode": "extend",
    "generic_head_terms": [
      "automation platform",
      "creative suite"
    ],
    "question_prefix_mode": "extend",
    "question_prefixes": [
      "is there",
      "best alternative"
    ],
    "long_tail_mode": "extend",
    "long_tail_tokens": [
      "workflow template",
      "playbook"
    ]
  },

  "discovery_seeds": {
    "default_profile": "ai_tools",
    "min_terms": 3,
    "profiles": {
      "ai_tools": {
        "label": "AI tools & automation",
        "terms": [
          "AI tool",
          "AI generator",
          "AI writer",
          "AI assistant",
          "machine learning platform",
          "chatbot builder",
          "workflow automation"
        ]
      },
      "saas_growth": {
        "label": "SaaS growth & marketing",
        "terms": [
          "saas marketing",
          "product led growth",
          "onboarding automation",
          "customer success playbook",
          "b2b lead generation",
          "self serve trial"
        ]
      },
      "creator_economy": {
        "label": "Creator & content economy",
        "terms": [
          "creator monetization",
          "newsletter automation",
          "online course tools",
          "content repurposing",
          "audience analytics"
        ]
      }
    }
  },
  
  "intent_analysis": {
    "confidence_threshold": 0.6,
    "enable_serp_analysis": true,
    "sub_intent_detection": true
  },
  
  "website_generation": {
    "use_tailwind": true,
    "include_analytics": true,
    "responsive_design": true,
    "seo_optimization": true,
    "generate_sitemap": true
  },
  
  "deployment": {
    "platform": "cloudflare",
    "auto_ssl": true,
    "custom_domain_support": true,
    "cdn_enabled": true,
    "environment": "production"
  },
  
  "ai_enhancement": {
    "ai_bonus_weight": 0.2,
    "newness_bonus_weight": 0.1,
    "commercial_value_weight": 0.15,
    "root_match_weight": 0.05
  },
  
  "output_settings": {
    "base_output_dir": "output",
    "reports_dir": "output/reports",
    "save_intermediate_results": true,
    "generate_thumbnails": true,
    "create_backup": true,
    "compress_assets": true
  },
  
  "notification": {
    "email_notifications": false,
    "webhook_url": "",
    "slack_integration": false
  }
}
