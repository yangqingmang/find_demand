  "workflow_settings": {
    "min_opportunity_score": 60,
    "max_projects_per_batch": 5,
    "auto_deploy": true,
    "generate_reports": true
  },
  
  "demand_mining": {
    "min_search_volume": 100,
    "max_competition": 0.8,
    "min_confidence": 0.7,
    "analysis_depth": "standard",
    "data_sources": ["google_trends", "keyword_planner"]
  },

  "keyword_scoring": {
    "weights": {
      "intent_confidence": 0.15,
      "intent_clarity": 0.1,
      "search_volume": 0.14,
      "competition": 0.1,
      "ai_bonus": 0.06,
      "commercial_value": 0.13,
      "serp_purchase_intent": 0.05,
      "serp_weakness": 0.1,
      "monetization_path": 0.12,
      "long_tail": 0.03,
      "brand_penalty": 0.02
    },
    "manual_feedback_bonus": 6,
    "manual_feedback_watch": 2,
    "manual_feedback_penalty": -10
  },

  "manual_review": {
    "serp_sample_threshold": 65,
    "serp_sample_size": 12,
    "serp_sample_random": 3,
    "output_dir": "output/manual_review",
    "feedback_file": "config/manual_feedback.json"
  },

  "new_word_detection": {
    "low_volume_threshold_12m": 250,
    "low_volume_threshold_90d": 120,
    "low_volume_threshold_30d": 80,
    "high_growth_threshold_7d": 80,
    "min_recent_volume": 10,
    "score_threshold": 55,
    "confidence_thresholds": {
      "high": 75,
      "medium": 55
    }
  },

